forEach: BoundedContext
fileName: pom.xml
path: {{name}}/.
ifDuplicated: merge
---
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <version>2.3.1</version>
  </parent>
  <properties>
    <java.version>12</java.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.springframework.boot2</groupId>
      <artifactId>spring-boot-starter-data-jpa2</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-rest</artifactId>
    </dependency>   
  </dependencies>
</project>

<function>
  window.$HandleBars.registerHelper('replaceName', function (name) {
    try{
      if(!name)
        return;

      if(name.includes(" ")){
        name = name.replaceAll(" ", "-")
      }

      return name
    } catch(e){
    console.log(e)
    }
    });
</function>
